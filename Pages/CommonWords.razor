@code {
    private IEnumerable<BasicWord> words = new List<BasicWord>();
    private IEnumerable<BasicWord> filteredWords = new List<BasicWord>();
    private List<string> categories = new List<string>();
    private string selectedCategory = "All";
    private bool isLoading = true;
    private string errorMessage = "";

    // Quiz variables
    private bool showQuiz = false;
    private QuizQuestion? currentQuestion = null;
    private int _difficultyLevel = 4;
    private int difficultyLevel
    {
        get => _difficultyLevel;
        set
        {
            if (_difficultyLevel != value)
            {
                _difficultyLevel = value;
                if (showQuiz && !answerSelected)
                {
                    GenerateNewQuestion();
                }
            }
        }
    }
    private int correctAnswers = 0;
    private int wrongAnswers = 0;
    private bool answerSelected = false;
    private bool isCorrect = false;
    private string selectedAnswer = "";
    private Random random = new Random();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (Repository == null)
            {
                errorMessage = "Repository is not initialized!";
                isLoading = false;
                return;
            }

            words = await Repository.GetAllWordsAsync();
            filteredWords = words;

            if (words != null && words.Any())
            {
                categories = words.Select(w => w.Category).Distinct().OrderBy(c => c).ToList();
            }
            else
            {
                errorMessage = "No words found in database. Please run the SQL setup script.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading words: {ex.Message}";
            Console.WriteLine($"Full error: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void FilterByCategory(string category)
    {
        selectedCategory = category;
        if (category == "All")
        {
            filteredWords = words;
        }
        else
        {
            filteredWords = words.Where(w => w.Category == category);
        }
    }

    private void NavigateToPage(string url)
    {
        NavigationManager.NavigateTo(url);
    }

    private void StartQuiz()
    {
        showQuiz = true;
        correctAnswers = 0;
        wrongAnswers = 0;
        GenerateNewQuestion();
    }

    private void CloseQuiz()
    {
        showQuiz = false;
        currentQuestion = null;
        answerSelected = false;
    }

    private void GenerateNewQuestion()
    {
        if (!words.Any()) return;

        answerSelected = false;
        isCorrect = false;
        selectedAnswer = "";

        // Randomly decide if we ask for Marathi->English or English->Marathi
        bool askMarathiToEnglish = random.Next(2) == 0;

        // Select a random word as the correct answer
        var wordsList = filteredWords.ToList();
        var correctWord = wordsList[random.Next(wordsList.Count)];

        // Generate wrong options
        var wrongOptions = wordsList
            .Where(w => w.Id != correctWord.Id)
            .OrderBy(x => random.Next())
            .Take(difficultyLevel - 1)
            .ToList();

        var allOptions = new List<string>();

        if (askMarathiToEnglish)
        {
            // Question: Show Marathi, ask for English
            allOptions.Add(correctWord.EnglishTranslation);
            allOptions.AddRange(wrongOptions.Select(w => w.EnglishTranslation));

            currentQuestion = new QuizQuestion
            {
                QuestionText = "What is the English translation?",
                DisplayWord = correctWord.MarathiWord,
                CorrectAnswer = correctWord.EnglishTranslation,
                Options = allOptions.OrderBy(x => random.Next()).ToList()
            };
        }
        else
        {
            // Question: Show English, ask for Marathi
            allOptions.Add(correctWord.MarathiWord);
            allOptions.AddRange(wrongOptions.Select(w => w.MarathiWord));

            currentQuestion = new QuizQuestion
            {
                QuestionText = "What is the Marathi word?",
                DisplayWord = correctWord.EnglishTranslation,
                CorrectAnswer = correctWord.MarathiWord,
                Options = allOptions.OrderBy(x => random.Next()).ToList()
            };
        }
    }

    private void CheckAnswer(string answer)
    {
        if (answerSelected || currentQuestion == null) return;

        answerSelected = true;
        selectedAnswer = answer;
        isCorrect = answer == currentQuestion.CorrectAnswer;

        if (isCorrect)
        {
            correctAnswers++;
        }
        else
        {
            wrongAnswers++;
        }
    }

    private string GetOptionClass(string option)
    {
        if (!answerSelected) return "";

        if (option == currentQuestion?.CorrectAnswer)
            return "correct";

        if (option == selectedAnswer && !isCorrect)
            return "wrong";

        return "";
    }

    private class QuizQuestion
    {
        public string QuestionText { get; set; } = "";
        public string DisplayWord { get; set; } = "";
        public string CorrectAnswer { get; set; } = "";
        public List<string> Options { get; set; } = new();
    }
}
